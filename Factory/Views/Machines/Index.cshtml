@{
  Layout = "_Layout";
}

@using Factory.Models

<h3>Current Machines</h3>

@if (Model.Count == 0)
{
  <p>There are no machines in the database.</p>
}
else
{
  <ul>
    @foreach (Machine machine in Model)
    {
      <li>@Html.ActionLink($"{machine.MachineName}", "Details", new { id = machine.MachineId })</li>
    }
  </ul>
}

<a href='@Url.Action("Create")'>
    <button type="button">Add a new Machine</button>
</a>