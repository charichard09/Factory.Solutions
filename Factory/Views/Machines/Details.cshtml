@{
  Layout = "_Layout";
}

@using Factory.Models
@model Factory.Models.Machine

<h2>Machine Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.MachineName): @Html.DisplayFor(model => model.MachineName)</h3>

@if (@Model.JoinEntities.Count == 0)
{
  <p>This machine does not have any current engineers assigned to them.</p>
}
else
{
  <h4>Current engineers assigned:</h4>
  <ul>
    @foreach (EngineerMachine join in Model.JoinEntities)
    {
      <li>
        @join.Engineer.EngineerName
      </li>
      @using (Html.BeginForm("DeleteEngineer", "Machines"))
      {
        @Html.Hidden("joinId", @join.EngineerMachineId)
        <input type="submit" value="Delete" />
      }
    }
  </ul>
}

@if (@ViewBag.Engineers.Count == 0)
{
  <button type="button" class="btn btn-lg btn-primary" disabled="">No Engineers to assign</button>
}
else
{
  <button class="btn btn-primary btn-lg active" type="button" aria-pressed="true">@Html.ActionLink("Assign an Engineer", "AddEngineer", new { id = Model.MachineId })</button>
}

<p>@Html.ActionLink("Add an Machine", "AddMachine", new { id = Model.MachineId })</p>
<p>@Html.ActionLink("Edit Machine", "Edit", new { id = Model.MachineId })</p>
<p>@Html.ActionLink("Delete Machine", "Delete", new { id = Model.MachineId })</p>