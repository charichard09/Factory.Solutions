@{
  Layout = "_Layout";
}

@using Factory.Models

<h3>Current Employed Engineers</h3>

@if (Model.Count == 0)
{
  <p>There are no engineers in the database.</p>
}
else
{
  <ul>
    @foreach (Engineer engineer in Model)
    {
      <li>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId })</li>
    }
  </ul>
}

<a href='@Url.Action("Create")'>
    <button type="button">Add a new Engineer</button>
</a>